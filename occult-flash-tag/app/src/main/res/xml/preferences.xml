<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:defaultValue="@string/out_prefs_flash_duration_default"
        android:dialogTitle="@string/out_prefs_flash_duration"
        android:entries="@array/flash_duration"
        android:entryValues="@array/flash_duration_values"
        android:key="duration"
        android:summary="%s"
        android:title="@string/out_prefs_flash_duration" />
    <ListPreference
        android:key="ntp_server"
        android:title="@string/out_prefs_ntp_server"
        android:dialogTitle="@string/out_prefs_ntp_server"
        android:summary="%s"
        android:entries="@array/ntp_servers"
        android:entryValues="@array/ntp_servers_values"
        android:defaultValue="@string/out_prefs_ntp_server_default" />
    <EditTextPreference
        android:inputType="textUri"
        android:key="custom_ntp_server"
        android:summary="@string/out_prefs_custom_ntp_server_summary"
        android:title="@string/out_prefs_custom_ntp_server" />
    <ListPreference
        android:key="repetitions"
        android:title="@string/out_prefs_repetitions"
        android:dialogTitle="@string/out_prefs_repetitions"
        android:summary="%s"
        android:entries="@array/repetitions"
        android:entryValues="@array/repetitions_values"
        android:defaultValue="@string/out_prefs_repetitions_default" />
    <ListPreference
        android:key="accuracy"
        android:title="@string/out_prefs_accuracy"
        android:dialogTitle="@string/out_prefs_accuracy"
        android:summary="%s"
        android:entries="@array/accuracy"
        android:entryValues="@array/accuracy_values"
        android:defaultValue="@string/out_prefs_accuracy_default" />
    <EditTextPreference
        android:defaultValue="@string/out_prefs_flash_interval_default"
        android:digits="0123456789"
        android:inputType="numberDecimal"
        android:key="interval"
        android:title="@string/out_prefs_flash_interval" />

</PreferenceScreen>